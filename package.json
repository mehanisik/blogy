{
	"name": "bloggy",
	"description": "A personal website for my recent projects and blog posts with nextjs",
	"version": "0.1.0",
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"lint": "biome check --write .",
		"format": "biome format --write .",
		"start": "next start",
		"clean": "rm -rf .next && rm -rf node_modules && rm -rf .turbo && rm -rf .vercel",
		"typecheck": "tsc --noEmit",
		"db:link": "source .env && npx supabase link --project-ref $SUPABASE_PROJECT_ID",
		"db:migrate": "npx supabase migration new",
		"db:push": "npx supabase db push",
		"db:types": "source .env && npx supabase gen types typescript --project-id $SUPABASE_PROJECT_ID --schema public > types/supabase.ts",
		"knip": "knip",
		"preview": "yarn build && yarn start",
		"deploy": "vercel --prod"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.1",
		"@radix-ui/react-alert-dialog": "^1.1.14",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-switch": "^1.2.5",
		"@radix-ui/react-tabs": "^1.1.12",
		"@radix-ui/react-tooltip": "^1.2.7",
		"@supabase/ssr": "^0.6.1",
		"@supabase/supabase-js": "^2.55.0",
		"@t3-oss/env-nextjs": "^0.13.8",
		"@total-typescript/ts-reset": "^0.6.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.539.0",
		"next": "15.4.6",
		"next-themes": "^0.4.6",
		"posthog-js": "^1.259.0",
		"posthog-node": "^5.6.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-hook-form": "^7.62.0",
		"react-is": "^19.1.1",
		"react-markdown": "^10.1.0",
		"recharts": "3.1.2",
		"rehype-highlight": "^7.0.2",
		"remark-gfm": "^4.0.1",
		"sonner": "^2.0.7",
		"supabase": "^2.34.3",
		"tailwind-merge": "^3.3.1",
		"tw-animate-css": "^1.3.6",
		"zod": "^4.0.17"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@netlify/plugin-nextjs": "^5.12.0",
		"@tailwindcss/postcss": "^4.1.12",
		"@types/node": "^24.2.1",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"babel-plugin-react-compiler": "^19.1.0-rc.2",
		"highlight.js": "^11.11.1",
		"knip": "^5.62.0",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.12",
		"typed-query-selector": "^2.12.0",
		"typescript": "^5.9.2",
		"vercel": "^45.0.9"
	}
}
