---
import type { Experience } from "../lib/api";

interface Props {
  experience: Experience[];
}

const { experience } = Astro.props;
---

<section
    id="experience"
    class="max-w-[var(--container-width)] mx-auto px-6 py-32"
>
    <div class="mb-20">
        <h2
            class="font-display text-[var(--text-h1)] leading-none text-[var(--ink)] tracking-tight"
            data-animate="section"
        >
            Experience
        </h2>
    </div>

    <div class="space-y-16">
        {
            experience.map((item) => (
                <div
                    class="grid md:grid-cols-12 gap-4 md:gap-8 group"
                    data-animate="experience-item"
                >
                    <div class="md:col-span-3">
                        <p class="font-mono text-sm text-[var(--ink-muted)] pt-1">
                            {item.period}
                        </p>
                    </div>

                    <div class="md:col-span-9 space-y-4">
                        <div>
                            <h3 class="font-display text-[var(--text-body-l)] font-medium text-[var(--ink)]">
                                {item.role}
                            </h3>
                            <p class="font-body text-[var(--text-body)] text-[var(--ink-muted)]">
                                {item.company} Â· {item.location}
                            </p>
                        </div>

                        <ul class="space-y-2">
                            {item.achievements.map((achievement) => (
                                <li class="font-body text-[var(--text-body)] text-[var(--ink)] opacity-80 leading-relaxed flex items-start gap-2">
                                    <span class="block mt-2 w-1 h-1 bg-[var(--ink-muted)] rounded-full flex-shrink-0" />
                                    <span>{achievement}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>
            ))
        }
    </div>
</section>
