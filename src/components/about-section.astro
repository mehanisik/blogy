---
import { aboutParagraphs } from "../data/portfolio";
---

<section id="about" data-animate="section" class="rounded-[var(--radius-lg)] border border-[var(--color-border)] bg-[var(--color-surface)]/70 p-6 backdrop-blur">
	<p class="text-sm uppercase tracking-[0.3em] text-[var(--color-muted)]">About</p>
	<div class="mt-4 space-y-4 text-base leading-relaxed text-[var(--color-foreground)]/90">
		{aboutParagraphs.map((text) => (
			<p>{text}</p>
		))}
		<div class="flex flex-wrap gap-2 text-lg font-semibold uppercase tracking-[0.5em] text-[var(--color-accent)]">
			{"Korok seeds".split("").map((char, index) => (
				<span
					style={{ animationDelay: `${index * 50}ms` }}
					class="animate-pulse text-[var(--color-accent-strong)]"
				>
					{char === " " ? "\u00A0" : char}
				</span>
			))}
		</div>
	</div>
</section>

