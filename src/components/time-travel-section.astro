---
import BinaryStrip from "./binary-strip.astro";
---

<BinaryStrip />

<section
	id="time-travel"
	data-animate="section"
	class="max-w-[1200px] mx-auto px-6 py-16 text-center"
>
	<p class="font-ui text-[var(--ui-small)] uppercase tracking-[2px] text-[var(--ink)]">Click to time travel</p>
	<h2 class="font-display text-[var(--h2)] font-black uppercase text-[var(--ink)] leading-[1.02] mt-4">
		Spinning TARDIS from Doctor Who
	</h2>
	<p class="font-body text-[var(--body)] text-[var(--ink)] leading-[1.38] mt-4 max-w-[600px] mx-auto">
		Tap below to warp through my past lives, projects, and experiments.
	</p>
	<a
		href="#experience"
		class="mt-8 inline-flex items-center gap-3 border border-[var(--ink)] px-6 py-3 font-ui text-[var(--ui-small)] uppercase tracking-[2px] text-[var(--ink)] transition hover:bg-[var(--ink)] hover:text-[var(--bg)]"
		style="border-width: var(--stroke-width);"
	>
		Engage Time Circuit
		<span aria-hidden="true">‚ü≤</span>
	</a>
</section>

<style>
	.font-display {
		font-family: var(--display-font);
	}
	.font-body {
		font-family: var(--body-font);
		font-weight: 300;
	}
	.font-ui {
		font-family: var(--ui-font);
	}
</style>
