---
import { projects } from "../data/portfolio";
---

<section id="projects" data-animate="section" class="space-y-6">
	<div class="flex items-center justify-between">
		<div>
			<p class="text-sm uppercase tracking-[0.3em] text-[var(--color-muted)]">Projects</p>
			<h2 class="text-2xl font-semibold text-white">Selected work</h2>
		</div>
		<a class="text-sm text-[var(--color-accent)]" href="https://github.com/bchiang7" target="_blank" rel="noreferrer">
			View Full Project Archive
		</a>
	</div>
	<div class="grid gap-5 md:grid-cols-2">
		{projects.map((project) => (
			<article
				data-animate="card"
				class="flex flex-col justify-between rounded-[var(--radius-lg)] border border-[var(--color-border)] bg-gradient-to-br from-[rgba(56,189,248,0.08)] via-[var(--color-panel)] to-[rgba(168,85,247,0.08)] p-5 shadow-[var(--shadow-soft)]"
			>
				<div class="space-y-1">
					<p class="text-xs uppercase tracking-[0.4em] text-[var(--color-muted)]">{project.tagline}</p>
					<h3 class="text-2xl font-semibold text-white">{project.title}</h3>
					<p class="text-sm text-[var(--color-muted)]">{project.metrics}</p>
					<p class="mt-3 text-sm leading-relaxed text-[var(--color-foreground)]/90">{project.description}</p>
				</div>
				<div class="mt-6 flex flex-wrap gap-2 text-xs font-medium text-[var(--color-accent)]">
					{project.stack.map((tech) => (
						<span class="rounded-full bg-[var(--color-tag-bg)] px-3 py-1">
							{tech}
						</span>
					))}
				</div>
				<a
					class="mt-6 inline-flex items-center gap-2 text-sm font-semibold text-[var(--color-accent-strong)]"
					href={project.link}
					target="_blank"
					rel="noreferrer"
				>
					{project.imageLabel}
					<span aria-hidden="true">â†—</span>
				</a>
			</article>
		))}
	</div>
</section>

