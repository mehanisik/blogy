---
import type { Hero, SocialLink } from "../lib/api";

interface Props {
  hero: Hero;
  socialLinks: SocialLink[];
}

const { hero, socialLinks } = Astro.props;
const year = new Date().getFullYear();
---

<footer
	class="max-w-[var(--container-width)] mx-auto px-6 py-12 border-t border-[var(--line)] mt-12"
>
	<div class="flex flex-col md:flex-row justify-between items-center gap-4">
		<p class="font-mono text-sm text-[var(--ink-muted)]">
			&copy; {year}
			{hero.name}
		</p>

		<div class="flex items-center gap-6">
			{
				socialLinks.map((link) => (
					<a
						href={link.href}
						target="_blank"
						class="font-mono text-sm text-[var(--ink-muted)] hover:text-[var(--ink)] transition-colors"
					>
						{link.label}
					</a>
				))
			}
		</div>
	</div>
</footer>
