---
import { hero, navLinks, socialLinks } from "../data/portfolio";
---

<aside class="lg:w-72 lg:flex-none">
	<div class="sticky top-8 flex flex-col gap-8 rounded-[var(--radius-lg)] border border-[var(--color-border)] bg-[var(--color-surface)]/80 p-6 backdrop-blur">
		<div class="space-y-1">
			<p class="text-sm uppercase tracking-[0.4em] text-[var(--color-muted)]">{hero.name}</p>
			<h1 class="text-3xl font-semibold leading-tight text-white">{hero.role}</h1>
			<p class="text-base text-[var(--color-muted)]">{hero.tagline}</p>
		</div>
		<nav aria-label="Primary" class="flex flex-col gap-2 text-sm font-medium text-[var(--color-muted)]">
			{navLinks.map((link) => (
				<a
					class="flex items-center justify-between rounded-[var(--radius-sm)] px-3 py-2 transition hover:text-white"
					href={link.href}
				>
					<span>{link.label}</span>
					<span aria-hidden="true" class="text-xs">↗︎</span>
				</a>
			))}
		</nav>
		<div class="grid gap-2 text-sm text-[var(--color-muted)]" aria-label="Social links">
			{socialLinks.map((link) => (
				<a
					class="flex items-center justify-between rounded-[var(--radius-sm)] border border-transparent px-3 py-2 transition hover:border-[var(--color-border)] hover:text-white"
					href={link.href}
					target="_blank"
					rel="noreferrer"
				>
					{link.label}
					<span aria-hidden="true">↗</span>
				</a>
			))}
		</div>
		<a
			class="inline-flex items-center justify-center rounded-full border border-[var(--color-border)] px-4 py-2 text-sm font-semibold text-white transition hover:border-white"
			href="/resume.pdf"
		>
			View Full Résumé
		</a>
	</div>
</aside>

