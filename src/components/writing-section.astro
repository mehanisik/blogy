---
import { writings } from "../data/portfolio";
import BinaryStrip from "./binary-strip.astro";
---

<BinaryStrip />

<section id="writing" data-animate="section" class="max-w-[1200px] mx-auto px-6 py-16 space-y-8">
	<div>
		<p class="font-ui text-[var(--ui-small)] uppercase tracking-[2px] text-[var(--ink)]">Writing</p>
		<h2 class="font-display text-[var(--h2)] font-black uppercase text-[var(--ink)] leading-[1.02] mt-2">
			Sharing ideas & learnings
		</h2>
	</div>
	<div class="space-y-4">
		{writings.map((post) => (
			<a
				href={post.link}
				target="_blank"
				rel="noreferrer"
				class="border border-[var(--ink)] p-6 bg-[var(--bg)] transition hover:bg-[var(--muted)] block"
				style="border-width: var(--stroke-width);"
			>
				<div class="flex items-center justify-between font-ui text-[var(--body-small)] text-[var(--ink)] mb-3">
					<span>{post.icon}</span>
					<span>{post.year}</span>
				</div>
				<p class="font-display text-[var(--h1)] font-black uppercase text-[var(--ink)] leading-[1.02]">
					{post.title}
				</p>
			</a>
		))}
	</div>
</section>

<style>
	.font-display {
		font-family: var(--display-font);
	}
	.font-ui {
		font-family: var(--ui-font);
	}
</style>
