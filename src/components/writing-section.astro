---
import { writings } from "../data/portfolio";
---

<section id="writing" data-animate="section" class="space-y-6">
	<div class="flex items-center justify-between">
		<div>
			<p class="text-sm uppercase tracking-[0.3em] text-[var(--color-muted)]">Writing</p>
			<h2 class="text-2xl font-semibold text-white">Sharing ideas & learnings</h2>
		</div>
	</div>
	<div class="space-y-4">
		{writings.map((post) => (
			<a
				class="flex flex-col gap-2 rounded-[var(--radius-md)] border border-[var(--color-border)] p-5 transition hover:border-[var(--color-accent)] hover:bg-[var(--color-surface)]/60"
				href={post.link}
				target="_blank"
				rel="noreferrer"
			>
				<div class="flex items-center justify-between text-sm text-[var(--color-muted)]">
					<span>{post.icon}</span>
					<span>{post.year}</span>
				</div>
				<p class="text-lg font-semibold text-white">{post.title}</p>
			</a>
		))}
	</div>
</section>

