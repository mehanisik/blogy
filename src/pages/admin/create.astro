---
import RichTextEditor from "../../components/admin/rich-text-editor";
import AdminLayout from "../../layouts/admin-layout.astro";
---

<AdminLayout title="Create New Post" description="Write a new blog post">
    <main class="container mx-auto max-w-4xl px-6 py-12 min-h-screen">
        <div class="mb-8">
            <a
                href="/admin"
                class="text-sm font-mono text-[var(--text-tertiary)] hover:text-[var(--accent-color)] transition-colors uppercase tracking-wider"
            >
                ‚Üê Back to Dashboard
            </a>
        </div>

        <h1 class="text-4xl font-bold mb-12 tracking-tight">Create New Post</h1>

        <form id="create-post-form" class="space-y-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="space-y-2">
                    <label
                        for="title"
                        class="block text-xs font-mono uppercase tracking-wider text-[var(--text-secondary)]"
                        >Title</label
                    >
                    <input
                        type="text"
                        id="title"
                        name="title"
                        required
                        class="w-full px-4 py-3 bg-[var(--bg-secondary)] border border-[var(--border-color)] text-[var(--text-primary)] focus:outline-none focus:border-[var(--accent-color)] transition-colors rounded-none"
                    />
                </div>

                <div class="space-y-2">
                    <label
                        for="slug"
                        class="block text-xs font-mono uppercase tracking-wider text-[var(--text-secondary)]"
                        >Slug</label
                    >
                    <input
                        type="text"
                        id="slug"
                        name="slug"
                        required
                        class="w-full px-4 py-3 bg-[var(--bg-secondary)] border border-[var(--border-color)] text-[var(--text-primary)] focus:outline-none focus:border-[var(--accent-color)] transition-colors rounded-none"
                    />
                </div>
            </div>

            <div class="space-y-2">
                <label
                    for="description"
                    class="block text-xs font-mono uppercase tracking-wider text-[var(--text-secondary)]"
                    >Description</label
                >
                <textarea
                    id="description"
                    name="description"
                    rows="3"
                    rows="3"
                    class="w-full px-4 py-3 bg-[var(--bg-secondary)] border border-[var(--border-color)] text-[var(--text-primary)] focus:outline-none focus:border-[var(--accent-color)] transition-colors rounded-none resize-none"
                ></textarea>
            </div>

            <div class="space-y-2">
                <label
                    for="cover_image"
                    class="block text-xs font-mono uppercase tracking-wider text-[var(--text-secondary)]"
                    >Cover Image URL</label
                >
                <input
                    type="url"
                    id="cover_image"
                    name="cover_image"
                    placeholder="https://..."
                    class="w-full px-4 py-3 bg-[var(--bg-secondary)] border border-[var(--border-color)] text-[var(--text-primary)] focus:outline-none focus:border-[var(--accent-color)] transition-colors rounded-none"
                />
            </div>

            <div class="space-y-2">
                <label
                    class="block text-xs font-mono uppercase tracking-wider text-[var(--text-secondary)]"
                    >Content</label
                >
                <RichTextEditor client:only="react" content="" name="content" />
            </div>

            <div id="status-message" class="text-sm font-mono hidden"></div>

            <div
                class="flex justify-end pt-4 border-t border-[var(--border-color)]"
            >
                <button
                    type="submit"
                    class="px-8 py-4 bg-[var(--accent-color)] text-white font-mono text-sm uppercase tracking-wider hover:opacity-90 transition-opacity"
                >
                    Publish Post
                </button>
            </div>
        </form>
    </main>
</AdminLayout>

<script>
    import { supabase } from "../../lib/supabase";

    const form = document.getElementById("create-post-form") as HTMLFormElement;
    const statusMessage = document.getElementById("status-message");

    const titleInput = document.getElementById("title") as HTMLInputElement;
    const slugInput = document.getElementById("slug") as HTMLInputElement;

    titleInput?.addEventListener("input", () => {
        if (slugInput && !slugInput.value) {
            slugInput.value = titleInput.value
                .toLowerCase()
                .replace(/[^a-z0-9]+/g, "-")
                .replace(/(^-|-$)+/g, "");
        }
    });

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        if (statusMessage) {
            statusMessage.classList.add("hidden");
            statusMessage.className = "text-sm hidden";
        }

        const formData = new FormData(form);
        const title = formData.get("title") as string;
        const slug = formData.get("slug") as string;
        const description = formData.get("description") as string;
        const content = formData.get("content") as string;
        const cover_image = formData.get("cover_image") as string;

        try {
            const { error } = await supabase.from("writings").insert({
                title,
                slug,
                description: description || null,
                content,
                cover_image: cover_image || null,
                type: "blog",
                date: new Date().toISOString(),
                metadata: {
                    read_time: String(
                        Math.ceil(content.split(" ").length / 200),
                    ),
                },
            });

            if (error) throw error;

            if (statusMessage) {
                statusMessage.textContent =
                    "Post published successfully! Redirecting...";
                statusMessage.className = "text-sm text-green-500";
                statusMessage.classList.remove("hidden");

                setTimeout(() => {
                    window.location.href = "/admin";
                }, 2000);
            }
        } catch (error: any) {
            if (statusMessage) {
                statusMessage.textContent = `Error: ${error.message}`;
                statusMessage.className = "text-sm text-red-500";
                statusMessage.classList.remove("hidden");
            }
        }
    });
</script>
